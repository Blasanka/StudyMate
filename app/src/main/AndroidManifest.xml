<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mad.studymate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/studymate_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/studymate_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity"></activity>
        <activity android:name=".activity.SignupActivity"></activity>
        <activity android:name=".activity.MainActivity"></activity>
        <activity android:name=".activity.AddQuizActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.AnswerQuizActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.ViewNoteActivity" />
        <activity android:name=".activity.AddNoteActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.AddTaskActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.ViewTaskActivity" />
        <activity android:name=".activity.QnCAsActivity" />
        <activity android:name=".activity.ScoreBoardActivity" />
        <activity android:name=".activity.UpdateNoteActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.UpdateTaskActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.MondaySessionActivity" />
        <activity android:name=".activity.TuesdaySessionActivity" />
        <activity android:name=".activity.WendsdaySessionActivity" />
        <activity android:name=".activity.ThursdaySessionActivity" />
        <activity android:name=".activity.FridaySessionActivity" />
        <activity android:name=".activity.SaturdaySessionActivity" />
        <activity android:name=".activity.SundaySessionActivity" />
        <activity android:name=".activity.AttemptsActivity"></activity>

        <activity android:name=".activity.AddSessionActivity" />
        <activity android:name=".activity.ViewSessionActivity" />
        <activity android:name=".activity.UpdateSessionActivity"></activity>
    </application>

</manifest>